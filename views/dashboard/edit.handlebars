<div class='container my-2'>
  <div class='card'>
    <h2 class='card-title px-2 py-1'>Edit Post</h2>
    <form id='blog' class='card-body'>
      <div class='form-group'>
        <label class='fs-3'>Title</label>
        <input type='text' class='form-control' id='title' value='{{title}}' />
      </div>

      <div class='form-group'>
        <label class='fs-3'>Content</label>
        <textarea
          type='textarea'
          class='form-control'
          id='content'
          rows='10'
        >{{content}}</textarea>
      </div>

      <button type='submit' class='btn mt-2'>Update</button>
      <a href='/dashboard' class='btn mt-2' id='cancel-button'>Cancel</a>

    </form>
    <script src='/js/blogEdit.js'></script>
  </div>
</div>